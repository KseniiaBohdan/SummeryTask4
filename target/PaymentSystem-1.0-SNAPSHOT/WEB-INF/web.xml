<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>PaymentSystem</display-name>
    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>

    <servlet>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>ProfileServlet</display-name>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>servlets.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>RegistrationServlet</display-name>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>AddNewCardServlet</display-name>
        <servlet-name>AddNewCardServlet</servlet-name>
        <servlet-class>servlets.AddNewCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewCardServlet</servlet-name>
        <url-pattern>/add_new_card</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>DeleteCardServlet</display-name>
        <servlet-name>DeleteCardServlet</servlet-name>
        <servlet-class>servlets.DeleteCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCardServlet</servlet-name>
        <url-pattern>/delete_card</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>BlockCardServlet</display-name>
        <servlet-name>BlockCardServlet</servlet-name>
        <servlet-class>servlets.BlockCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlockCardServlet</servlet-name>
        <url-pattern>/block_card</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>BlockAccountServlet</display-name>
        <servlet-name>BlockAccountServlet</servlet-name>
        <servlet-class>servlets.BlockAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlockAccountServlet</servlet-name>
        <url-pattern>/block_account</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>DeleteAccountServlet</display-name>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <servlet-class>servlets.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <url-pattern>/delete_account</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>AddNewAccountServlet</display-name>
        <servlet-name>AddNewAccountServlet</servlet-name>
        <servlet-class>servlets.AddNewAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewAccountServlet</servlet-name>
        <url-pattern>/add_new_account</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>DoPaymentServlet</display-name>
        <servlet-name>DoPaymentServlet</servlet-name>
        <servlet-class>servlets.DoPaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoPaymentServlet</servlet-name>
        <url-pattern>/do_payment</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>HistoryServlet</display-name>
        <servlet-name>HistoryServlet</servlet-name>
        <servlet-class>servlets.HistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HistoryServlet</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>UserManagement</display-name>
        <servlet-name>UserManagement</servlet-name>
        <servlet-class>servlets.UserManagement</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManagement</servlet-name>
        <url-pattern>/user_management</url-pattern>
    </servlet-mapping>


</web-app>
