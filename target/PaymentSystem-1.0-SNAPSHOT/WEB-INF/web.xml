        <servlet-class>servlets.admin.user.UserManagementServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManagementServlet</servlet-name>
        <url-pattern>/user/management</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>UserActionServlet</display-name>
        <servlet-name>UserActionServlet</servlet-name>
        <servlet-class>servlets.admin.user.UserActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserActionServlet</servlet-name>
        <url-pattern>/admin/action</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>CardActionServlet</display-name>
        <servlet-name>CardActionServlet</servlet-name>
        <servlet-class>servlets.admin.card.CardActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CardActionServlet</servlet-name>
        <url-pattern>/admin/card/action</url-pattern>
    </servlet-mapping>


    <servlet>
        <display-name>AdminProfileServlet</display-name>
        <servlet-name>AdminProfileServlet</servlet-name>
        <servlet-class>servlets.admin.AdminProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminProfileServlet</servlet-name>
        <url-pattern>/admin/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>PaymentsHistoryServlet</display-name>
        <servlet-name>PaymentsHistoryServlet</servlet-name>
        <servlet-class>servlets.admin.PaymentsHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentsHistoryServlet</servlet-name>
        <url-pattern>/admin/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>UnblockRequestsServlet</display-name>
