<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>PaymentSystem</display-name>
    <welcome-file-list>
        <welcome-file>/login</welcome-file>
    </welcome-file-list>

    <servlet>
        <display-name>Index</display-name>
        <servlet-name>Index</servlet-name>
        <servlet-class>servlets.welcome.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>LoginServlet</display-name>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.welcome.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>ProfileServlet</display-name>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>servlets.welcome.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>PutMoneyServlet</display-name>
        <servlet-name>PutMoneyServlet</servlet-name>
        <servlet-class>servlets.welcome.PutMoneyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PutMoneyServlet</servlet-name>
        <url-pattern>/put</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>RegistrationServlet</display-name>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.welcome.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>AddCardServlet</display-name>
        <servlet-name>AddCardServlet</servlet-name>
        <servlet-class>servlets.card.AddCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCardServlet</servlet-name>
        <url-pattern>/card/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>DeleteCardServlet</display-name>
        <servlet-name>DeleteCardServlet</servlet-name>
        <servlet-class>servlets.card.DeleteCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCardServlet</servlet-name>
        <url-pattern>/card/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>BlockCardServlet</display-name>
        <servlet-name>BlockCardServlet</servlet-name>
        <servlet-class>servlets.card.BlockCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlockCardServlet</servlet-name>
        <url-pattern>/card/block</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>UnblockCardServlet</display-name>
        <servlet-name>UnblockCardServlet</servlet-name>
        <servlet-class>servlets.card.UnblockCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnblockCardServlet</servlet-name>
        <url-pattern>/card/unblock</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>BlockAccountServlet</display-name>
        <servlet-name>BlockAccountServlet</servlet-name>
        <servlet-class>servlets.account.BlockAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlockAccountServlet</servlet-name>
        <url-pattern>/account/block</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>DeleteAccountServlet</display-name>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <servlet-class>servlets.account.DeleteAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteAccountServlet</servlet-name>
        <url-pattern>/account/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>AddAccountServlet</display-name>
        <servlet-name>AddAccountServlet</servlet-name>
        <servlet-class>servlets.account.AddAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAccountServlet</servlet-name>
        <url-pattern>/account/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>DoPaymentServlet</display-name>
        <servlet-name>DoPaymentServlet</servlet-name>
        <servlet-class>servlets.payment.DoPaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoPaymentServlet</servlet-name>
        <url-pattern>/do-payment</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>ConfirmPayment</display-name>
        <servlet-name>ConfirmPayment</servlet-name>
        <servlet-class>servlets.payment.ConfirmPayment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmPayment</servlet-name>
        <url-pattern>/payment/confirm</url-pattern>
    </servlet-mapping>

